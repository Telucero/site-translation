    },
    {
      "parameters": {
        "url": "https://api.example.com/translate",
        "options": {
          "bodyContentType": "json"
        }
      },
      "name": "Translate",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [1040, 300]
    },
    {
      "parameters": {
        "functionCode": "const grouped = {};\nfor (const item of items) {\n  const locale = item.json.target_language;\n  const translatedPath = item.json.source_path.replace('/en/', `/${locale}/`);\n  if (!grouped[locale]) {\n    grouped[locale] = [];\n  }\n  grouped[locale].push({\n    language: locale,\n    path: translatedPath,\n    content: item.json.translated || item.json.content\n  });\n}\nreturn [{ json: { translations: Object.values(grouped).flat() } }];"
      },
      "name": "Assemble Results",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [1320, 300]
    }
